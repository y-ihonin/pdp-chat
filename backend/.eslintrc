{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
      "es6": true
  },
  "rules": {
    "func-call-spacing": "off",
    "no-useless-escape": "warn",
    "quotes": ["error", "double"],
    "no-unused-vars": [
      "error",
      { 
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
